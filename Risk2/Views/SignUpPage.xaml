<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Risk2.Views.SignUpPage"
             xmlns:viewmodel="clr-namespace:Risk2.ViewModels"
             x:DataType="viewmodel:SignUpViewModel">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="Black"
                          Offset="0.0"/>
            <GradientStop Color="grey"
                          Offset="0.5"/>
            <GradientStop Color="Black"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>


    <Grid HorizontalOptions="Center"
          VerticalOptions="Center">

        <VerticalStackLayout>
            <Image Grid.Row="0"
                   Source="risk2_logo.png"
                   VerticalOptions="End"
                   WidthRequest="100"
                   HeightRequest="100"/>

            <Border Stroke="Transparent"
                    StrokeShape="RoundRectangle 10,10,10,10"
                    BackgroundColor="Transparent">

                <VerticalStackLayout Padding="15">

                    <Border Style="{StaticResource AuthField}">
                        <Entry Placeholder="firstname"
                               Text="{Binding Firstname}"/>
                    </Border>

                    <Border Style="{StaticResource AuthField}"
                            Margin="0, 15, 0, 0">
                        <Entry Placeholder="lastname"
                               Text="{Binding Lastname}"/>
                    </Border>

                    <Border Style="{StaticResource AuthField}"
                            Margin="0, 15, 0, 0">
                        <Entry Placeholder="Username"
                               Text="{Binding Username}"/>
                    </Border>

                    <Border Margin="0, 15, 0, 0"
                            Style="{StaticResource AuthField}">
                        <Entry Placeholder="Password"
                               IsPassword="True"
                               BackgroundColor="white"
                               Text="{Binding Password}"/>
                    </Border>

                    <Button Grid.Column="0"
                            Text="Sign Up"
                            Margin="0,15,0,0"
                            MaximumWidthRequest="100"
                            BackgroundColor="Black"
                            HorizontalOptions="Start"
                            Clicked="OnSignUpClicked"/>

                    <BoxView Margin="0, 15, 0,0"
                             Color="Black"
                             WidthRequest="300"
                             HeightRequest="1"/>
                </VerticalStackLayout>

            </Border>



        </VerticalStackLayout>
    </Grid>

</ContentPage>