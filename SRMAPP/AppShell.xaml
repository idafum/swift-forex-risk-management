<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:SRMAPP.Views"
       x:Class="SRMAPP.AppShell"
       Title="SRMAPP"
       FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid HeightRequest="150">
                <Image Aspect="AspectFill"
                       Source="logo.png"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Accounts"
                      ContentTemplate="{DataTemplate views:AccountListPage}"/>
        <!-- <ShellContent Title="Trades"
                      ContentTemplate="{DataTemplate views:AccountListPage}"/>

        <ShellContent Title="Overview"
                      ContentTemplate="{DataTemplate views:AccountListPage}"/> -->
    </FlyoutItem>

    <!-- <ShellContent Title="About"
                  ContentTemplate="{DataTemplate views:AccountListPage}"/> -->

    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <Label Text="Made by Swift"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   Margin="20"/>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>

</Shell>
